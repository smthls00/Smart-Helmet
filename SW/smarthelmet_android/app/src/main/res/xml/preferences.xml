    </androidx.preference.PreferenceCategory>

    <androidx.preference.PreferenceCategory
        android:key="proximityCategory"
        android:title="Proximity Sensors">

        <androidx.preference.EditTextPreference
            android:key="@string/forwardDistancePreference"
            android:title="Forward Sensor"
            android:summary="Distance notification"
            android:defaultValue="1000"
            android:dialogTitle="Type a distance between 0 and 1500mm" />

        <androidx.preference.EditTextPreference
            android:key="@string/backwardDistancePreference"
            android:title="Backward Sensor"
            android:summary="Distance notification"
