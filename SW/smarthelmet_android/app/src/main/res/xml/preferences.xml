            android:key="bpmPreference"
            android:title="MAX30102"
            android:defaultValue="true" />

        <androidx.preference.CheckBoxPreference
            android:key="utpPreference"
            android:title="TMP006"
            android:defaultValue="true" />

        <androidx.preference.CheckBoxPreference
            android:key="bme680Preference"
