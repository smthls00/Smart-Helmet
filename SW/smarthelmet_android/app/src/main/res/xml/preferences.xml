            android:dialogTitle="@string/enterThresholdPreference"/>

        <androidx.preference.EditTextPreference
            android:key="@string/otpPreference"
            android:title="@string/temperature"
            android:defaultValue="@string/otpThreshold"
            android:dialogTitle="@string/enterThresholdPreference"/>

        <androidx.preference.EditTextPreference
            android:key="@string/pressurePreference"
