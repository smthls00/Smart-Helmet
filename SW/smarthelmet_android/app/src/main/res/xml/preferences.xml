    <androidx.preference.PreferenceCategory
        android:key="proximityCategory"
        android:title="Proximity Sensors">

        <androidx.preference.EditTextPreference
            android:key="forwardSensorPreference"
            android:title="Forward Sensor"
            android:summary="Distance notification"
            android:defaultValue="200m"
