<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.preference.PreferenceCategory
        android:key="generalCategory"
        android:title="General">

        <androidx.preference.EditTextPreference
            android:selectable="false"
            android:key="@string/batteryPreference"
            android:title="@string/batteryLevel"
            android:defaultValue="true" />

        <androidx.preference.CheckBoxPreference
            android:key="@string/receivePreference"
            android:title="Receive data"
            android:defaultValue="true" />

        <androidx.preference.CheckBoxPreference
            android:key="@string/thresholdNotificationPreference"
            android:title="Threshold notifications"
            android:defaultValue="true" />

        <androidx.preference.CheckBoxPreference
            android:key="@string/loggingPreference"
            android:title="Log data"
            android:defaultValue="false" />

        <androidx.preference.EditTextPreference
            android:key="@string/sendPreference"
            android:title="Custom command"
            android:summary="Send a custom command to your device"
            android:defaultValue=" "
            android:dialogTitle="Type a command here" />

        <Preference android:title="Left Direction"
            android:key="@string/leftPreference"
            android:summary="LED animation to the left" />

        <Preference android:title="Right Direction"
            android:key="@string/rightPreference"
            android:summary="LED animation to the right" />


        <Preference android:title="Export data"
            android:key="@string/exportPreference"
            android:summary="Export logged data from sensors"/>




