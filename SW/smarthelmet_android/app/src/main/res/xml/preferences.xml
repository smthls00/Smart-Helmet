            android:dialogTitle="@string/enterThresholdPreference"/>

        <androidx.preference.EditTextPreference
            android:key="@string/tvocPreference"
            android:title="@string/tvoc"
            android:defaultValue="@string/tvocThreshold"
            android:dialogTitle="@string/enterThresholdPreference"/>

        <androidx.preference.EditTextPreference
            android:key="@string/lpgPreference"
            android:title="@string/lpg"
