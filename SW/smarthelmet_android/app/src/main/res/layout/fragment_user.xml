<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.UserFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/bpmCard"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="4dp"
                app:contentPadding="5dp"
                app:cardElevation="6dp"
                app:cardMaxElevation="10dp"
                app:layout_constraintTop_toTopOf="parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@id/bpmTv"
                        android:padding="12dp"
                        android:paddingEnd="0dp"
                        android:src="@drawable/ic_favorite_black_24dp"
                        tools:ignore="RtlSymmetry"></ImageView>

                    <TextView
                        android:id="@+id/bpmTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:padding="12dp"
                        android:text="Heart Rate"
                        android:textColor="#222"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/bpmDivider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/bpmTv"
                        android:layout_margin="4dp"
                        android:background="@android:color/black" />

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/bpmChart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/bpmDivider"
                        android:layout_margin="7dp" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/tempCard"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="4dp"
                app:contentPadding="5dp"
                app:cardElevation="6dp"
                app:cardMaxElevation="10dp"
                app:layout_constraintTop_toBottomOf="@id/bpmCard">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@id/tempTv"
                        android:padding="12dp"
                        android:paddingEnd="0dp"
                        android:src="@drawable/ic_ac_unit_black_24dp"
                        tools:ignore="RtlSymmetry">

                    </ImageView>

                    <TextView
                        android:id="@+id/tempTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:padding="12dp"
                        android:text="Skin Temperature"
                        android:textColor="#222"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/tempDivider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/tempTv"
                        android:layout_margin="4dp"
                        android:background="@android:color/black" />

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/tempChart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/tempDivider"
                        android:layout_margin="7dp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/actCard"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="4dp"
                app:contentPadding="5dp"
                app:cardElevation="6dp"
                app:cardMaxElevation="10dp"
                app:layout_constraintTop_toTopOf="@id/tempCard">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@id/actTv"
                        android:padding="12dp"
                        android:paddingEnd="0dp"
                        android:src="@drawable/ic_star_black_24dp"
                        tools:ignore="RtlSymmetry">

                    </ImageView>

                    <TextView
                        android:id="@+id/actTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:padding="12dp"
                        android:text="Activities"
                        android:textColor="#222"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/actDivider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/actTv"
                        android:layout_margin="4dp"
                        android:background="@android:color/black" />

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/actChart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/actDivider"
                        android:layout_margin="7dp" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/stepsCard"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="4dp"
                app:contentPadding="5dp"
                app:cardElevation="6dp"
                app:cardMaxElevation="10dp"
                app:layout_constraintTop_toTopOf="@id/actCard">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@id/stepsTv"
                        android:padding="12dp"
                        android:paddingEnd="0dp"
                        android:src="@drawable/ic_directions_walk_black_24dp"
                        tools:ignore="RtlSymmetry">

                    </ImageView>

                    <TextView
                        android:id="@+id/stepsTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:padding="12dp"
                        android:text="Steps"
                        android:textColor="#222"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/stepsDivider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/stepsTv"
                        android:layout_margin="4dp"
                        android:background="@android:color/black" />

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/stepsChart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/stepsDivider"
                        android:layout_margin="7dp" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <TextView
                android:background="#0006FF"
                android:id="@+id/dataTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/chart" />
        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>